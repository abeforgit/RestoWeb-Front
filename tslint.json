{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      "./.prettierrc"
    ],

    "ordered-imports": false,
    "interface-name": false,
    "no-console": false,
    "linebreak-style":  [true, "LF"],
    "object-literal-sort-keys": false
  }
}
